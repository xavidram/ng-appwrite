{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["apps/webapp/src/environments/*"],
      "@ng-appwrite/core": ["libs/core/src/index.ts"],
      "@ng-appwrite/auth": ["libs/auth/src/index.ts"],
      "@ng-appwrite/topbar": ["libs/topbar/src/index.ts"],
      "@ng-appwrite/profile": ["libs/profile/src/index.ts"],
      "@ng-appwrite/dashboard": ["libs/dashboard/src/index.ts"],
      "@ng-appwrite/home": ["libs/home/src/index.ts"],
      "@ng-appwrite/not-found": ["libs/not-found/src/index.ts"],
      "@ng-appwrite/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
