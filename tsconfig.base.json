{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2019"],
    "resolveJsonModule": true,
    "rootDir": ".",
    "paths": {
      "@env/*": ["apps/webapp/src/environments/*"],
      "@ng-appwrite/core": ["libs/core/src/index.ts"],
      "@ng-appwrite/auth": ["libs/auth/src/index.ts"],
      "@ng-appwrite/topbar": ["libs/topbar/src/index.ts"],
      "@ng-appwrite/profile": ["libs/profile/src/index.ts"],
      "@ng-appwrite/dashboard": ["libs/dashboard/src/index.ts"],
      "@ng-appwrite/home": ["libs/home/src/index.ts"],
      "@ng-appwrite/not-found": ["libs/not-found/src/index.ts"],
      "@ng-appwrite/shared": ["libs/shared/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": ["node_modules", "tmp"]
}
